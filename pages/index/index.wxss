.main {
  /* 轮播图 */
  /* 视频列表 */
}
.main .nav-wrap .nav {
  white-space: nowrap;
  padding: 5rpx 0;
}
.main .nav-wrap .nav .nav-item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.main .nav-wrap .nav .nav-item.active {
  border-bottom: 5rpx solid #de688b;
}
.main .slides {
  margin-top: 10rpx;
}
.main .slides swiper {
  height: 220rpx;
}
.main .slides swiper swiper-item navigator {
  width: 100%;
  height: 100%;
}
.main .slides swiper swiper-item navigator image {
  width: 100%;
  height: 100%;
}
.main .video-wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5px;
  justify-content: space-between;
}
.main .video-wrap .video-item {
  width: 48%;
  margin-bottom: 20rpx;
}
.main .video-wrap .video-item .video-img {
  position: relative;
}
.main .video-wrap .video-item .video-img image {
  width: 100%;
  border-radius: 15rpx;
}
.main .video-wrap .video-item .video-img .video-info {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.main .video-wrap .video-item .video-title {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
